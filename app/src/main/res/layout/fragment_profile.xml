<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/gameImage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/dark_purple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Hello, "
                    android:textColor="@color/white"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    android:textSize="20sp"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hello"
                    tools:text="Khi Gai Gai"
                    android:textColor="@color/white"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    android:textSize="25sp"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <RelativeLayout
                    android:id="@+id/height_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name">

                    <TextView
                        android:id="@+id/labelHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H: "
                        android:textColor="@color/white"
                        fontPath="fonts/DINNextLTPro-Bold.otf"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/dp_10"/>

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/labelHeight"
                        tools:text="164"
                        android:textColor="@color/white"
                        fontPath="fonts/DINNextLTPro-Bold.otf"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/heightUnits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/height"
                        android:text="cm"
                        android:textColor="@color/white"
                        fontPath="fonts/DINNextLTPro-Bold.otf"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/weight_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height_layout">

                    <TextView
                        android:id="@+id/labelWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W: "
                        android:textColor="@color/white"
                        fontPath="fonts/DINNextLTPro-Bold.otf"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/dp_10"/>

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/labelWeight"
                        tools:text="55"
                        android:textColor="@color/white"
                        fontPath="fonts/DINNextLTPro-Bold.otf"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/weightUnits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/weight"
                        android:text="kg"
                        android:textColor="@color/white"
                        fontPath="fonts/DINNextLTPro-Bold.otf"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameImage"
        android:layout_marginTop="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/textStepsLeftLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/textStepsLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Steps ("
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />

                <TextView
                    android:id="@+id/currentMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textStepsLeft"
                    android:text="APRIL"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:background="@color/light_blue"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/currentMonth"
                    android:text="): "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/stepsToTake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textStepsLeftLayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    android:textSize="35sp"
                    android:textColor="@color/purple_grey"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="25sp"
                    android:textColor="@color/purple_grey"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />

                <TextView
                    android:id="@+id/totalSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="132938"
                    android:textSize="25sp"
                    android:textColor="@color/purple_grey"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />

            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="240dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/stepsToTake"
            />

            <RelativeLayout
                android:id="@+id/caloriesBurnedLayout"
                android:layout_below="@id/barChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCaloriesBurned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly Calories Burned:"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />

                <TextView
                    android:id="@+id/caloriesBurned"
                    android:layout_below="@id/tvCaloriesBurned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="75"
                    android:textSize="35sp"
                    android:textColor="@color/purple_grey"
                    fontPath="fonts/DINNextLTPro-Bold.otf"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>