<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_standard_2">

        <RelativeLayout
            android:id="@+id/layoutTopBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white">

            <ImageView
                android:id="@+id/buttonRight"
                android:layout_width="@dimen/button_standard"
                android:layout_height="@dimen/button_standard"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/ic_share" />

            <TextView
                android:id="@+id/textTitle"
                fontPath="fonts/DINNextLTPro-Medium.otf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"
                tools:text="WalkInThePark" />

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_bar"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_tab_4"
            android:padding="@dimen/padding_16"
            />

        <ImageView
            android:id="@+id/buttonHome2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_tab_4"
            android:padding="@dimen/padding_16"
            />

        <ImageView
            android:id="@+id/buttonHome3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_tab_4"
            android:padding="@dimen/padding_16"
            />

        <ImageView
            android:id="@+id/buttonHome4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_tab_4"
            android:padding="@dimen/padding_16"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutBottomBar"
        android:layout_below="@id/layoutTopBar"
        />

</RelativeLayout>